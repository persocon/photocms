<% error = @upload.errors.key?(:file) && @upload.errors[:file].count > 0 %>
<figure id="image-uploaded">
  <% if @upload.file %>
  
    <img src="<%= @upload.file.thumb %>" />
  <% end %>
</figure>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :file, :class => 'control-label' %>
  <div class='controls'>
    <%= f.file_field :file, :class => 'form-control input-xlarge input-with-feedback image-upload', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:file) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:uploads, :index), :class => 'btn btn-default' %>
</div>